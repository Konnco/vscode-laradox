{
	"name": "vscode-laradox",
	"displayName": "vscode-laradox",
	"description": "Database designer for Laravel built in Visual Studio Code",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.40.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "laradox.openfile",
				"title": "Open File"
			},
			{
				"command": "laradox.migration.designer",
				"title": "Database Designer",
				"icon": {
					"light": "assets/command-icons/light/migration-designer.svg",
					"dark": "assets/command-icons/dark/migration-designer.svg"
				}
			},
			{
				"command": "laradox.migration.create",
				"title": "Create New Migration",
				"icon": {
					"light": "assets/command-icons/light/migration-create.svg",
					"dark": "assets/command-icons/dark/migration-create.svg"
				}
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "vscode-laradox",
					"title": "Laradox",
					"icon": "assets/activity-bar.svg"
				}
			]
		},
		"views": {
			"vscode-laradox": [
				{
					"id": "laradox-controller",
					"name": "Controllers"
				},
				{
					"id": "laradox-model",
					"name": "Models"
				},
				{
					"id": "laradox-migration",
					"name": "Migrations"
				},
				{
					"id": "laradox-view",
					"name": "Views"
				}
			]
		},
		"menus": {
			"view/title": [
				{
					"command": "laradox.migration.create",
					"when":"view==laradox-migration",
					"group": "navigation"
				},
				{
					"command": "laradox.migration.designer",
					"when":"view==laradox-migration",
					"group": "navigation"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.40.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}